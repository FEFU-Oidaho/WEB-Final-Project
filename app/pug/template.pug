<!DOCTYPE html>
// Variables -------------------------------------
-var title= "Военная техника"
-var tank_url= "/tank.html"
-var bmt_url= "/bmp.html"
-var art_url= "/art.html"
-var tth_url= "/tth.html"
-
    var menu= {
        'Главная': "/",
        'Танки': tank_url,
        'БМП': bmt_url,
        'Артиллерия': art_url,
        "ТТХ": tth_url,
    }

// Mixins ----------------------------------------
mixin create_menu(items)
    each url, title in items
        if active == url
            a.active(href=url)= title
        else 
            a(href=url)= title

// HTML Template ---------------------------------
block variables

html
    head
        meta(charset='utf-8')
        title #{title}
        link(rel='stylesheet' type='text/css' href='css/main.css')
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">

    body
        block header
            header
                .size-container
                    .header-elements
                        .logo= "Техника"
                        .menu
                            +create_menu(menu)
                            
        // placeholder-------
        block content
        // placeholder-------

        block footer
            footer
                .size-container
                    .footer-elements
                        .copyrights
                            p= "© Башинский Р.А., Б9121-09.03.04(4), 2023-2024"
                        div 
                        .contacts
                            p="✉ Контакты"
        

        script(src="js/jquery-3.5.1.min.js")
        script(src="js/main.js")
                
                

