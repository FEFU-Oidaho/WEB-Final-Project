extends template

block variables
    -var DestenyText= "Предназначены для огневых ударов по позициям врага, прорывов и гневой поддержки армии"
    -var WeaponsText= "Имеет мощные орудия большого калибра, комплексы РЭБ, пулеметы, гранатометные комплексы и устройства тралления"
    -var ArmorText= "Высокая степень защищенности. Динамическая защита, а так же комбинированная, катаная и гамогенная броня обеспечивают исключительную живучесть на поле боя"
    -var VideoPath= "vid/tank.mp4"
    -
        var DescriptionItems = [
            {"title": "Назначение", "text": DestenyText},
            {"title": "Вооружение", "text": WeaponsText},
            {"title": "Бронирование", "text": ArmorText}
        ]

mixin create_plates(items)
    .veh-container-plates
        each item in items
            .veh-container-content-plate
                h3= item.title 
                p= item.text

block content 
    article 
        .main-container
            .veh-container-grid
                .veh-container-banner
                    img(src="img/tank.png")
                .veh-container-plane
                    .size-container
                        +create_plates(DescriptionItems)
                .veh-container-plane
                    .size-container
                        .veh-container-video
                            video(src=VideoPath controls muted autoplay loop)
